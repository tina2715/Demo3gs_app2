<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nen1234"
    tools:context=".doimatkhau">
        <LinearLayout
            android:background="@drawable/nen_den"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:fontFamily="@font/dancing"
                android:layout_marginTop="50dp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đổi mật khẩu"
                android:textStyle="bold"
                android:textSize="40dp"
                android:gravity="center"/>
            <EditText
                android:id="@+id/edt_tentaikhoan"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Tài khoản"
                android:background="@drawable/et_custom"
                android:padding="10dp"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Mật khẩu cũ"
                android:background="@drawable/et_custom"
                android:padding="10dp"
                android:drawableLeft="@drawable/ic_visibility_off_black_24dp"
                android:drawablePadding="5dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:id="@+id/edt_maukhau"/>
            <EditText
                android:id="@+id/edt_matkhaumoi"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Mật khẩu mới"
                android:background="@drawable/et_custom"
                android:padding="10dp"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_visibility_off_black_24dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>
            <TextView
                android:fontFamily="@font/ebgaramond"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mã Capcha:"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:textSize="16dp"/>
            <LinearLayout
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <EditText
                    android:padding="10dp"
                    android:id="@+id/edt_macapcha"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:hint="Nhập mã"
                    android:background="@drawable/et_custom"/>
                <TextView
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"
                    android:id="@+id/tv_macapcha"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="ABC"
                    android:fontFamily="@font/ebgaramond"
                    android:textSize="15dp"
                    android:textStyle="bold"/>
                <Button
                    android:id="@+id/btn_macapcha"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:textStyle="bold"
                    android:text="Chọn"
                    android:textColor="@color/white"
                    android:background="@drawable/bogoc_btn_chon"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_xacnhan"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Xác nhận"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bogoc_btn_xanh"
                android:textColor="@color/white"
                android:textStyle="bold"/>
            <Button
                android:textColor="@color/white"
                android:id="@+id/btn_huy"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Hủy"
                android:background="@drawable/bogoc_btn_xam"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50dp"
                android:textStyle="bold"/>
        </LinearLayout>
</RelativeLayout>