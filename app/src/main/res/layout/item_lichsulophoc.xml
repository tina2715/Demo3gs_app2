<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/lichsulophoc_item_id"
    android:background="@drawable/nen_sang"
    android:layout_width="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="15dp"
    android:padding="10dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical"
        android:layout_width="230dp"
        android:layout_height="wrap_content">
        <TextView
            android:fontFamily="@font/dancing"
            android:layout_marginTop="5dp"
            android:text="Tên lớp"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@color/orange"
            android:id="@+id/ten_ttlophoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:fontFamily="@font/ebgaramond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Môn học:"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:textColor="@color/blue"
                android:textSize="18dp"/>
            <TextView
                android:fontFamily="@font/ebgaramond"
                android:text="Môn học"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:id="@+id/monhoc_ttlophoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:fontFamily="@font/ebgaramond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:text="Địa chỉ:"
                android:textSize="18dp"/>
            <TextView
                android:text="Địa chỉ"
                android:fontFamily="@font/ebgaramond"
                android:textStyle="bold"
                android:textSize="18dp"
                android:id="@+id/diachi_ttlophoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:fontFamily="@font/dancing"
                android:text="Học phí"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/orange"
                android:id="@+id/hocphi_ttlophoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Trình độ gia sư"
            android:id="@+id/trinhdogiasu_ttlophoc"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Thời gian học"
            android:id="@+id/thoigianhoc_ttlophoc"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Trạng thái"
            android:id="@+id/trangthai_ttlophoc"
            android:textStyle="bold"/>
    </LinearLayout>
        <Button
            android:layout_width="60dp"
            android:background="@drawable/ic_chevron_right_black_24dp"
            android:layout_height="50dp"
            android:id="@+id/btn_xemchitiet"
            android:layout_gravity="center_vertical"/>
</LinearLayout>