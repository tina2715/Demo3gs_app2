<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/dialog_lopchonhan"
    android:layout_height="match_parent"
    android:gravity="center">
    <LinearLayout
        android:background="@drawable/bogoc_khungnhin1"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:orientation="vertical">
        <TextView
            android:fontFamily="@font/dancing"
            android:id="@+id/dialog_tenlop_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên lớp"
            android:textColor="@color/orange"
            android:textStyle="bold"
            android:textSize="28dp"/>
        <TextView
            android:fontFamily="@font/ebgaramond"
            android:layout_gravity="center_horizontal"
            android:textStyle="italic"
            android:id="@+id/dialog_trangthai_id"
            android:text="Trạng thái"
            android:textColor="@color/blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"/>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:fontFamily="@font/ebgaramond"
                android:drawablePadding="5dp"
                android:padding="5dp"
                android:drawableLeft="@drawable/ic_library_books_black_24dp"
                android:layout_width="40dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="center"
                android:fontFamily="@font/ebgaramond"
                android:text="Môn học"
                android:id="@+id/dialog_monhoc_id"
                android:textColor="@color/blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_home_black_24dp"/>
            <TextView
                android:layout_gravity="center"
                android:fontFamily="@font/ebgaramond"
                android:text="Địa chỉ: "
                android:id="@+id/dialog_diachi_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"/>
        </LinearLayout>

        <TextView
            android:gravity="center_horizontal"
            android:fontFamily="@font/dancing"
            android:text="Học phí"
            android:id="@+id/dialog_hocphi_id"
            android:textColor="@color/orange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="24dp"/>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_school_black_24dp"/>
            <TextView
                android:fontFamily="@font/ebgaramond"
                android:layout_gravity="center"
                android:text="Trình độ gia sư:"
                android:id="@+id/dialog_trinhdogiasu_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_today_black_24dp"/>
            <TextView
                android:fontFamily="@font/ebgaramond"
                android:layout_gravity="center"
                android:text="Thời gian học:"
                android:textColor="@color/xanh"
                android:id="@+id/dialog_thoigianhoc_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>