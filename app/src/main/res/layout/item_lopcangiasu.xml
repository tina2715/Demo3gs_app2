<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/lopcangiasu_item_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="10"
    android:padding="10dp"
    android:background="@drawable/nen_sang"
    android:layout_marginTop="5dp">
    <LinearLayout
        android:layout_weight="9"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_caplop_item"
            android:textStyle="bold"
            android:textColor="@color/orange"
            android:fontFamily="@font/dancing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:text="Tên lớp"
            android:textSize="20sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">
            <TextView
                android:fontFamily="@font/ebgaramond"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Môn học:"/>
            <TextView
                android:id="@+id/tv_tenmonhoc_item"
                android:textSize="15sp"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tên môn học"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/blue"
                android:fontFamily="@font/ebgaramond"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Địa điểm học:"/>
            <TextView
                android:textColor="@color/blue"
                android:id="@+id/tv_diadiemhoc_item"
                android:textSize="15sp"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Địa điểm học"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">
            <TextView
                android:fontFamily="@font/ebgaramond"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Học phí:"/>
            <TextView
                android:id="@+id/tv_hocphi_item"
                android:textSize="15sp"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Học phí"/>
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tv_malop_item"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tv_tentaikhoanhv_item"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tv_ngaydukien_item"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tv_soluonggio_item"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tv_ngayhoctrongtuan_item"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tv_giobatdau_item"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tv_loaitrinhdo_item"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tv_mota_item"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tv_ngaytao_item"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tv_trangthailop_item"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tv_tentaikhoangs_item"/>


    </LinearLayout>
    <Button
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:id="@+id/btn_xemchitiet"
        android:background="@drawable/ic_chevron_right_black_24dp"
        android:layout_gravity="center_vertical"/>

</LinearLayout>